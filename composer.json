{
  "name": "cyberspectrum/php-transifex",
  "license": "MIT",
  "type": "project",
  "description": "transifex API client written 100% in PHP",
  "autoload": {
    "psr-4": {
      "CyberSpectrum\\PhpTransifex\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CyberSpectrum\\PhpTransifex\\Tests\\": "tests"
    }
  },
  "require": {
    "php": ">=5.6",
    "php-http/cache-plugin": "^1.2",
    "php-http/client-common": "^1.3",
    "php-http/discovery": "^1.1",
    "php-http/httplug": "^1.1",
    "psr/cache": "~1.0"
  },
  "require-dev": {
    "phpcq/all-tasks": "~1.1",
    "php-http/guzzle6-adapter": "~1.1"
  },
  "suggest": {
    "php-http/buzz-adapter": "For using buzz as transport",
    "php-http/guzzle5-adapter": "For using guzzle 5 as transport",
    "php-http/guzzle6-adapter": "For using guzzle 6 as transport",
    "php-http/react-adapter": "For using react as transport"
  }
}
